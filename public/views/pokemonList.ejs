<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="http://fonts.cdnfonts.com/css/pokemon-solid" rel="stylesheet">
                
  <!-- Bootstrap CSS -->
  <link href="./css/main.css" rel="stylesheet">

  <title>Hello, world!</title>
</head>

<body>
  <!-- TÃ­tulo -->
  <h1 class="title">Pokedex API by Daniel Pulgarin</h1>
  <br>
  <!-- Logo -->
  <img src="https://lazysnorlax.files.wordpress.com/2015/11/pokc3a9dex_pt.png" class="img-fluid" alt="">
  <br>
  <!-- contenedor -->
  <div class="poke-container"></div>

  <!-- navegacion -->
  <nav class="nav nav-pills nav-justified">
    <a class="nav-link active" aria-current="page" href="pokemonList">Lista de Pokemon</a>
    <a class="nav-link" href="#">Consultar Pokemon por Nombre</a>
    <a class="nav-link" href="#">Link</a>
    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
  </nav>

    <!-- lista de pokeon -->
    <div class="row">
      <% pokemon.forEach(function(pokemon){ %>
        <div class="col-sm-3">
          <div class="card">
            <div class="card-body">
              <img src=<%- pokemon.sprite %> class="img-thumbnail" alt="...">
              <h5 class="card-title"><%- pokemon.nombre %></h5>
              <ul class="list-group list-group-flush">
    
                <% if(pokemon.habilidades.length === 1) { %>
                  <li class="list-group-item">Habilidad: <%- pokemon.habilidades[0] %></li>
                <% } else { %>
                  <li class="list-group-item">Habilidades: <%- pokemon.habilidades[0] %> / <%- pokemon.habilidades[1] %> / <%- pokemon.habilidades[2] %></li>
                <% } %>
                
                <% if(pokemon.tipo.length === 1) { %>
                  <li class="list-group-item">Tipo: <%- pokemon.tipo[0] %> </li>
                <% } else { %>
                  <li class="list-group-item">Tipos: <%- pokemon.tipo[0] %> / <%- pokemon.tipo[1] %></li>
                <% } %>
                <li class="list-group-item">Peso: <%- pokemon.peso %></li>
                <!-- <li class="list-group-item">Tipo: <%- pokemon.tipo %></li> -->
              </ul>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
        </div>
      <% }) %>
      </div>

  <!-- spinner -->
  <!-- <div class="spinner-border text-primary" role="status">
    <span class="visually-hidden">Loading...</span>
  </div> -->

  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item"><a class="page-link" href="#">Previous</a></li>
      <li class="page-item"><a class="page-link" href="/pokemonList">Next</a></li>
    </ul>
  </nav>

  <!-- buscador -->
  <div class="input-group mb-3">
    <input type="text" id="pokemonNumber" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2">
    <button class="btn btn-outline-secondary" id="submit" onclick="getData()" id="button-addon2">Button</button>
  </div>

  <!-- Optional JavaScript; choose one of the two! -->


  <!-- Option 1: Bootstrap Bundle with Popper -->

  <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->

  <!-- Option 2: Separate Popper and Bootstrap JS -->
  <script src="./js/pokemonList.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
    integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
    crossorigin="anonymous"></script>

</body>

</html>